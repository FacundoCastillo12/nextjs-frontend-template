{
  "name": "nextjs-frontend-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write \"src/**/*.(ts|tsx|js|jsx)\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "cypress:ui": "cypress open",
    "cypress:start": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "cypress": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "posttest": "npx nyc report --reporter lcov --reporter text --report-dir coverage",
    "test": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "prepare": "husky install && chmod ug+x .husky/*"
  },
  "dependencies": {
    "next": "14.1.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.28",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "autoprefixer": "^10.0.1",
    "cypress": "^13.6.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nyc": "^15.1.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "swc-plugin-coverage-instrument": "^0.0.20",
    "tailwindcss": "^3.3.0",
    "typescript": "<5.4.0"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  }
}
